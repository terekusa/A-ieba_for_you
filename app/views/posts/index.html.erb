<% content_for(:title, t('.title')) %>
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <%= render 'search_form', url: posts_path %>
      <div class="row row-cols-2 row-cols-md-2 g-2">
        <% if @posts.present? %>
          <%= render @posts %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
      <%= paginate @posts %>
    </div>
  </div>
</div>